hostname = nodeloc.com, www.nodeloc.com, nodeseek.com, www.nodeseek.com, *.barventory.com, qxdata.liangjima.com, captive.apple.com

# ============ 调试 V4 (Fix Crash) ============
# 访问: http://qxdata.liangjima.com (指向最新的修复版脚本)
^http://qxdata\.liangjima\.com(/.*)?$ url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/v4.js

# 访问: http://qxdata.liangjima.com/delete...
^http://qxdata\.liangjima\.com/delete.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/del.js
^http://qxdata\.liangjima\.com/clear.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/clr.js

# 对照组 (V3 极简版)
^http://captive\.apple\.com/qxdata(/.*)?$ url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/v3.js

# ============ Cookie 捕获 ============
^https?://(www\.)?nodeloc\.com/.* url script-request-header https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/cookie_capture.js
^https?://(www\.)?nodeseek\.com/.* url script-request-header https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/cookie_capture.js

# ============ Barventory Response 记录 ============
^https?://.*\.barventory\.com/.* url script-response-body https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/response_logger.js
