hostname = nodeloc.com, www.nodeloc.com, nodeseek.com, www.nodeseek.com, *.barventory.com, qxdata.liangjima.com, umalaaa.github.io, captive.apple.com

# ============ QX Data Viewer V3 (Ultimate) ============

# 1. 推荐入口 (HTTP)
# 访问: http://qxdata.liangjima.com
^http://qxdata\.liangjima\.com(/.*)?$ url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/viewer_v3.js

# 2. 备用入口 (HTTPS - 需 MitM)
# 访问: https://umalaaa.github.io/qx-data
^https://umalaaa\.github\.io/qx-data(/.*)?$ url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/viewer_v3.js

# 3. 删除/清除路由
^https?://(qxdata\.liangjima\.com|umalaaa\.github\.io|captive\.apple\.com)/qx-data/delete.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/del.js
^https?://(qxdata\.liangjima\.com|umalaaa\.github\.io|captive\.apple\.com)/qx-data/clear.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/clr.js

# 兼容旧路径
^http://qxdata\.liangjima\.com/delete.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/del.js
^http://qxdata\.liangjima\.com/clear.* url script-echo-response https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/clr.js

# ============ Cookie 捕获 ============
# NodeLoc: 深度优化，只匹配首页和 API 接口，彻底屏蔽静态资源请求
^https?://(www\.)?nodeloc\.com/($|api/.*) url script-request-header https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/cookie_capture.js

# NodeSeek: 借鉴 ZenmoFeiShi 方案，精准匹配个人信息接口以获取完整 Header
^https?://www\.nodeseek\.com/api/account/getInfo/.* url script-request-header https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/cookie_capture.js
# 备用: 访问首页
^https?://www\.nodeseek\.com/?$ url script-request-header https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/cookie_capture.js

# ============ Barventory Response 记录 ============
^https?://.*\.barventory\.com/.* url script-response-body https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/response_logger.js

# ============ 每日签到任务 ============
# 每天 9:00 执行 NodeSeek 签到
# 注意: 需要在 QX 的 [task_local] 中添加，或订阅此片段
# 0 9 * * * https://raw.githubusercontent.com/umalaaa/qccfig-mirror/main/scripts/nodeseek_checkin.js, tag=NodeSeek签到, img-url=https://www.nodeseek.com/static/image/favicon/android-chrome-192x192.png, enabled=true
